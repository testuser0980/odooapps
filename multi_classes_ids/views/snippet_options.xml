<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="custom_snippet_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-selector="section, [class^='col-'], img">
                <we-input string="Add New Classes" class="o_we_large"
                          data-attribute-name="class" data-no-preview="false" data-select-attribute=""
                          placeholder="Add New Classes" title="Add New Classes"/>
                <we-input string="Add New ID" class="o_we_large"
                          data-attribute-name="id" data-no-preview="false" data-select-attribute=""
                          placeholder="Add ID" title="Add New ID"/>
                <we-input string="Add Custom Styles" class="o_we_large" data-no-preview="false"
                          data-select-attribute=""
                          data-attribute-name="style" title="Add Custom Styles"/>
            </div>
        </xpath>
    </template>

</odoo>